server "default" {
  http {
    listen_address = "0.0.0.0:12345"
  }
}

logging {
  level  = "info"
  format = "logfmt"
}

prometheus.scrape "self" {
  targets = [
    "localhost:12345",
  ]
}

loki.source.file "varlogs" {
  paths      = ["/host/var/log/*.log"]
  forward_to = [loki.write.send_to_loki.receiver]  # ❗️اینجا باید به writer وصل بشه
}

loki.write "send_to_loki" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }

  labels = {
    job = "alloy-logs"
  }
}

